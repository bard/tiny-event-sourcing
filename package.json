  },
  "engines": {
    "node": ">=14"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "release-it": {
    "git": {
      "requireBranch": "master",
      "requireCleanWorkingDir": true,
      "commitMessage": "ci: release ${version}"
    }
  }
